doctype html
html
    head
        meta(charset='utf-8')
    body
        article
            h2= id
            =password
        ul
            each topic in topics
                li
                    each top in topic
                        =top
               
        form(action='/topic', method='post')
            p
                input(type='text' name='title' placeholder='title')
            p
                textarea(name='desc')
            p
                input(type='submit')