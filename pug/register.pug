doctype html
//- /users/register
html
    head
        link(rel="stylesheet" href="./stylesheet/layout.css" type="text/css")
        meta(charset='utf-8')
        title 회원 가입
    body
        div(id="title")
            div(class="title") GAME365
        //-
            클릭시 home.pug로 이동

        div(id='content')
            form(action='/register_proces', method='post')
                fieldset
                    legend 필수입력사항
                    p 아이디
                        input(type='text' name='id' placeholder='아이디')
                    p 비밀번호
                        input(type='password' name='password' placeholder='비밀번호')
                    p 닉네임
                        input(type='text' name='name' placeholder='닉네임')
                    p 이메일
                        input(type='mail' name='mail' placeholder='이메일')

                fieldset
                    legend 선택입력사항
                    p 핸드폰번호
                        input(type='text' name='phone' placeholder='핸드폰번호')
                    p 전문분햐
                        input(type='text' name='subject' placeholder='전문분야')
                    P git아이디
                        input(type='text' name='gitid' placeholder='git아이디')
                    p
                input(type='submit' value='회원가입')
