doctype html
html
    head
        link(rel="stylesheet" href="../stylesheet/layout.css" type="text/css")
        meta(charset='utf-8')
        title 프로젝트 생성
    body
        div(id="title")
            div(class="title") 
                a(href= '/main') GAME365
            //-
                클릭시 home.pug로 이동
        div(id="content")
            form(action='/project/new_project/process', method='post')
                div 게임명
                    input(type='text', name='gamename', placeholder='게임명')
                fieldset
                    legend 키워드
                    label
                        div 액션
                            input(type='checkbox' name='keyword' value='action')
                    label
                        div 어드벤쳐
                            input(type='checkbox' name='keyword' value='adventure')
                    label
                        div 퍼즐
                            input(type='checkbox' name='keyword' value='puzzle')
                    label
                        div 1인칭
                            input(type='checkbox' name='keyword' value='fps')
                    label
                        div 3인칭
                            input(type='checkbox' name='keyword' value='tps')
                    label
                        div 슈팅
                            input(type='checkbox' name='keyword' value='shooting')
                label
                    div 완성된 게임
                        input(type='radio' name='whether_maked' value='yes')
                    div 완성되지 않은 게임
                        input(type='radio' name='whether_maked' value='no')
                div 후원목표금액
                    input(type='number' name='funding' value='0' min='0' max='1000000000')
                div 판매가격
                    input(type='number' name='price' value='0' min='0', max='10000000')
                div 상세소개글
                    input(type='text' name='introduce')
                input(type='submit' value='프로젝트 생성')
                    //-
                        완료시project_list.pug로 이동
                